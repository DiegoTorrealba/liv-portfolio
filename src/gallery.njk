{% extends '_templates/base.njk' %}

{% block page_title %}Gallery{% endblock %}

{% block page_description %}Gallery of photographs taken by Olivia Strohecker{% endblock %}

{% block content %}
  <h1 class="display-1 text-center mb-3">Gallery</h1>
  <div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 align-items-center gx-0">
      {% for photo in photos.photos %}
        <div class="col-auto">
          <img src="img/{{ photo.file_name }}" alt="{{ photo.description }}" class="d-block w-100 img-fluid">
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}